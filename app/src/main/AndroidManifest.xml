<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.biluutech.vbebuyer">
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.CheckoutActivity"></activity>
        <activity android:name=".Activities.CartActivity" />
        <activity android:name=".Activities.ThanksActivity" />
        <activity android:name=".Activities.CategoryProductActivity" />
        <activity android:name=".Activities.ProductDescriptionActivity" />
        <activity android:name=".Activities.HomeActivity" />
        <activity android:name=".Activities.SignupBuyerActivity" />
        <activity android:name=".Activities.LoginBuyerActivity" />
        <activity android:name=".Activities.SplashBuyerActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>