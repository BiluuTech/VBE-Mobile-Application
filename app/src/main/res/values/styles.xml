<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/MontTextViewStyle</item>
        <item name="android:buttonStyle">@style/MontButtonStyle</item>
    </style>

    <style name="MontTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/montserrat_alternates</item>
    </style>

    <style name="MontButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/montserrat_alternates</item>
    </style>

</resources>